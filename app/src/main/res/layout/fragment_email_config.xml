<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0">


        <LinearLayout
            android:id="@+id/lnrMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_40sdp"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cvInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_6sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:elevation="@dimen/_1sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardElevation="@dimen/_3sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_5sdp"
                            android:paddingVertical="@dimen/_10sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Host"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvHost"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Port"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvPort"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Email Address"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvEmailAddress"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="Password"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvPassword"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="From Name"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvFromName"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView

                                    style="@style/big_text_bold"
                                    android:layout_width="3dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:text="BCC Address"
                                    android:textSize="@dimen/_10sdp" />


                                <TextView
                                    android:id="@+id/tvBCCAddress"
                                    style="@style/big_text_bold"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                   android:layout_weight="7"
                                    android:gravity="start"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/lnrEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Host"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etHost"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="Host"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapSentences"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Port"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etPort"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="Port"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:digits="0123456789"
                                    android:maxLength="4"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Email Address"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etEmailAddress"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="Email Address"
                                    android:imeOptions="actionNext"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Password"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etPassword"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="Password"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapSentences"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="From Name"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etFromName"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="From Name"
                                    android:imeOptions="actionNext"
                                    android:inputType="textCapSentences"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                        <TextView
                            style="@style/medium_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="BCC Address"
                            android:textSize="@dimen/_8sdp" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:elevation="@dimen/_1sdp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_4sdp"
                            app:cardElevation="@dimen/_3sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/etBCCAddress"
                                    style="@style/medium_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:hint="BCC Address"
                                    android:imeOptions="actionDone"
                                    android:inputType="textCapSentences"
                                    android:maxLength="25"
                                    android:maxLines="1"
                                    android:paddingHorizontal="@dimen/_5sdp"
                                    android:textSize="@dimen/_10sdp" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relEdit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Edit Email Configuration"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relUpdate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:visibility="gone">

            <TextView
                style="@style/medium_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Update Email Configuration"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>
        <ProgressBar
            android:id="@+id/progressView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:visibility="gone" />


    </RelativeLayout>


</layout>