<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
<declare-styleable name="Cookie">
    <attr name="cookieTitleColor" format="color" />
    <attr name="cookieMessageColor" format="color" />
    <attr name="cookieActionColor" format="color" />
    <attr name="cookieBackgroundColor" format="color" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="messageTextSize" format="dimension" />
    <attr name="actionTextSize" format="dimension" />

</declare-styleable>

    <declare-styleable name="JDSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
        <attr name="arrowDrawable" format="reference|color" />
        <attr name="dropDownListPaddingBottom" format="dimension" />
        <attr name="backgroundSelector" format="integer" />
        <attr name="textTint" format="color" />
        <attr name="popupTextAlignment" />
        <attr name="entries" format="reference" />
    </declare-styleable>

    <attr name="popupTextAlignment" format="enum">
        <enum name="start" value="0" />
        <enum name="end" value="1" />
        <enum name="center" value="2" />
    </attr>

</resources>